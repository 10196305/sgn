<%args>
    $relations
    $title
</%args>
% if (@$relations) {
<&| /page/info_section.mas,
    title => $title,
    collapsible => 1,
&>
% for my $relation (@$relations) {
% my $word = $relation->[0] eq 'derives_from' ? '' : ' is ';
    <% $relation->[1] . $word %>
    <b><% $relation->[0] %>
    </b> this feature.
    <br/>
% }

</&>
% }
