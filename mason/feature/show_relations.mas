<%args>
    $relations
    $title
</%args>
<%once>
    use SGN::View::Feature qw/cvterm_link/;
</%once>
% if (@$relations) {
<&| /page/info_section.mas,
    title => $title,
    collapsible => 1,
    is_subsection => 1,
&>
% for my $relation (@$relations) {
% my $word = $relation->[0] =~ m/derives_from/ ? '' : ' is ';
    <% $relation->[1] . $word %>
    <b><% $relation->[0] %>
    </b> this feature.
    <br/>
% }

</&>
% }
