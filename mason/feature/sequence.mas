<%args>
    $sequence  => undef
    $feature   => undef
    $blast_url => undef
    $title     => 'Nucleotide Sequence'
    $start     => undef
    $end       => undef
    $id        => undef
</%args>
<%once>
    use Bio::Seq;
</%once>
<%perl>
    if ($feature) {
        $id = $start && $end ? $feature->name . ':' . "$start..$end" : $feature->name;
    }
    my $seq = $sequence ||= Bio::PrimarySeq->new(
            -id  => $id,
            -seq => $feature->residues,
            -alphabet => 'dna',
        );
    my $link;
    $link = '/api/v1/sequence/' . $feature->uniquename . '.fasta' if $feature;

    # protect us from causing a BioPerl exception if the sequence is not in the database
    if ($seq->length > 0 && $start && $end) {
        $seq = $seq->trunc($start,$end);
        $link .= "&start=$start&end=$end";
    }
</%perl>

% if ($seq->length > 0 ) {
<& /util/import_javascript.mas,
    classes => [qw(Text.Markup)]
&>
<&| /page/info_section.mas,
        title       => $title,
        collapsible => 1,
        collapsed   => 0,
&>
  Length : <% $start && $end ? $end - $start : $seq->length %> bases<br/>
  <p/>
% if( $link ) {
    <a href="<% $link %>">Download as FASTA</a>
% }
% if( $seq->length < 30_000) {
  <div style="margin-left: 3em">
    <& /sequence/with_markup.mas,
        seq       => $seq,
        width     => 80,
        subdiv    => undef,
        blast_url => $blast_url
    &>
  </div>
% }
</&>
% }
