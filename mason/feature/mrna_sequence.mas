<%args>
    $feature
    $blast_url  => undef
</%args>
<%perl>
</%perl>

% if( my $seq = mrna_sequence( $feature ) ) {

  <div style="margin-left: 3em">
    <& /sequence/with_markup.mas,
       seq       => $seq,
       width     => 80,
       subdiv    => 10,
       blast_url => $blast_url,
     &>
  </div>

% }

<%init>
    use SGN::View::Feature qw/ mrna_sequence /;
    my $link = '/api/v1/sequence/' . $feature->uniquename . '.fasta';
</%init>
