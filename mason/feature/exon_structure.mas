<%args>
    $feature
    $title => 'Genomic Structure and Context'
    $xrefs
</%args>
<&| /page/info_section.mas,
    title => $title,
    collapsible => 1,
    empty_message => 'not available',
&>
% if( $gbrowse_xref ) {
   <a style="display: block; border: 1px solid #666; padding: 3px; margin: 3px auto" href="<% $gbrowse_xref->url %>">
        <img src="<% $gbrowse_xref->preview_image_url %>">
   </a>
% }
</&>

<%init>
    # in our xrefs, find the gbrowse2 xref that has only our feature
    # in it, and use its gbrowse_img and a link to gbrowse as our exon
    # structure diagram
    my ( $gbrowse_xref ) =
         grep {     $_->feature->feature_name eq 'gbrowse2'
                 && @{$_->seqfeatures} == 1
                 && $_->seqfeatures->[0]->display_name eq $feature->name 
              } @$xrefs;
</%init>
