<div class="modal fade" id="add_team_dialog" name="add_team_dialog" tabindex="-1" role="dialog" aria-labelledby="addTeamDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addTeamDialog">Manage Teams<span id="person_name_for_role"></span></h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <input type="hidden" id="sp_team_id" name="sp_team_id" value="" />
                            <label class="col-sm-3 control-label">Team Name: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="team_name" name="team_name" type="text" placeholder="Enter team name"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Responsibilities: </label>
                            <div class="col-sm-9">
                                <input class="form-control" id="team_description" name="team_description" type="text" placeholder="Enter description"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" name="add_team_cancel_button" id="add_team_cancel_button" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="add_team_submit_button" id="add_team_submit_button" title="Submit">Submit</button>
            </div>
        </div>
    </div>
</div>

<script>

jQuery(document).ready(function() {
    jQuery('#add_team_submit_button').click( function(e) {
        jQuery.ajax ( {
            url : '/ajax/people/add_team?name='+jQuery("#team_name").val()+'&description='+jQuery("#team_description").val(),
            beforeSend: function() {
                jQuery("#working_modal").modal("show");
            },
            success: function(response){
                //console.log(response);
                jQuery("#working_modal").modal("hide");
                if (response.error) {
                    alert('Error: '+response.error);
                } else {
                    jQuery('#manage_teams_table').DataTable().ajax.reload();
                    alert('Successfully added team!');
                }
            },
            error: function(response) {
                jQuery("#working_modal").modal("hide");
                alert('An error occured: '+response);
            }
        });
    });
});

</script>
