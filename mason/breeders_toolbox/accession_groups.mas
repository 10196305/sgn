
<%args>
$accession_groups
</%args>


% foreach my $group (@{$accession_groups}) {
  <&| /page/info_section.mas, title=>$group->{'name'}, collapsible=>1, collapsed=>1, &>
  <table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Accession Name</th>
      <th>Description</th>
      <th>Synonyms</th>
    </tr>
  </thead>
  <tbody>
  <%perl>
  foreach my $accession (@{$group->{'members'}}) {
      my $synonym_list = '';
      my @synonyms = @{$accession->{'synonyms'}};
      foreach my $synonym (@synonyms) {
         if ($synonym_list eq '') {
	    $synonym_list = $synonym;
	 } else {
           $synonym_list = $synonym_list.", ".$synonym;
	 }
      }    
      print "<tr><td><a href=\"/stock/".$accession->{'stock_id'}."/view\">".$accession->{'name'}."</a></td><td>".$accession->{'description'}."</td><td>".$synonym_list."</td></tr>";
  }
  </%perl>
  </tbody>
  </table>
  </&>
% }




