<%args>
$protocol_id
$protocol_name
</%args>

<div class="well well-sm">
    <div class="form form-horizontal" id="markers_table_search_form">
        <div class="form-group form-group-sm" id="filtering_by_markers" style="display: ">
            <label class="col-sm-4 control-label">Filter by Marker Name(s): </label>
            <div class="col-sm-8" >
                <input class="form-control" id="markers_table_search_marker_name" type="text" placeholder="Marker name(s) (comma separated)"/>
            </div>
        </div>
        <div class="form-group form-group-sm" id="filtering_by_markers">
            <label class="col-sm-4 control-label">OR</label>
        </div>
        <div class="form-group form-group-sm" id="filtering_by_chromosome">
            <label class="col-sm-4 control-label">Filter by Chromosome: </label>
            <div class="col-sm-8" >
                <div class="input-group">
                    <select class="form-control" id="search_by_chromosome">
                    </select>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <center>
    <button class="btn btn-primary btn-sm" id="marker_table_search_submit">Search</button>
    </center>
</div>

<table id="protocol_markers_table" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Marker Name</th>
            <th>Chromosome</th>
            <th>Position</th>
            <th>Alternate</th>
            <th>Reference</th>
            <th>Quality</th>
            <th>Filter</th>
            <th>Info</th>
            <th>Format</th>
        </tr>
    </thead>
    </tbody>
</table>
<br>
<br>
<div class="panel panel-default">
    <div class="panel-body">
        <&| /page/info_section.mas, title => 'Copy Markers to a List', collapsible=>1, collapsed=>0, subtitle=>'<i>Copy the marker names showing in table to a new or exisiting list</i>'&>
            <br>
        </&>
        <div id="markers_to_new_list" style="display:none"></div>
        <div id="markers_add_to_list"></div>
    </div>
</div>

<script>

jQuery(document).ready(function(){

    var genotyping_protocol_table = jQuery('#protocol_markers_table').DataTable({
        'searching' : false,
        'ordering'  : false,
        'processing': true,
        'serverSide': true,
        'lengthMenu': [10,20,50,100,1000],
        'ajax': { 'url': '/ajax/genotyping_protocol/markers_search',
                  'data': function(d) {
                     d.protocol_id = <% $protocol_id %>;
                     d.marker_names = jQuery('#markers_table_search_marker_name').val();
                     d.chromosome_name = jQuery('#search_by_chromosome').val();
                }
        },
    });

    jQuery('#filter_type').change(function() {
        jQuery('#filtering_by_markers').toggle(($('#filter_type').val() == 'marker_names')) ;
        jQuery('#filtering_by_chromosome').toggle(($('#filter_type').val() == 'chromosome_name')) ;
    });

    jQuery.ajax({
        url:'/ajax/breeder/search/genotyping_protocol_chromosomes',
        data:{'genotyping_protocol':<% $protocol_id %>},
        success: function(response){
            var chromosomes = response.chromosome_names;
            var html = '<select id = "search_by_chromosome" >';
            html += "<option value=''></option>";
            for (var i=0; i<chromosomes.length; i++) {
                html += "<option value='"+chromosomes[i] + "'>" + chromosomes[i] + "</option>";
            }
            html += "</select>";

            if(i ==''){
                alert("Could not get chromosome names");
                return;
            }

            jQuery('#search_by_chromosome').html(html);
        },
        error:function(response){
            alert("An error occurred");
        }
    });

    jQuery('#protocol_markers_table').on( 'draw.dt', function (){
        var protocol_name = "<% $protocol_name %>";
        var protocol_id = "<% $protocol_id %>";
        var protocol_info = 'protocol:' + protocol_name + ',' + 'id:' + protocol_id;

        var marker_names = genotyping_protocol_table.column(0).data();
        var html = "";
        for(var i=0; i<marker_names.length; i++){
            html += marker_names[i]+"\n";
        }
        jQuery("#markers_to_new_list").html(html);
        addToListMenu("markers_add_to_list", "markers_to_new_list", {
            selectText: true,
            listType: 'markers',
            description: protocol_info
        });
    });

    jQuery('#marker_table_search_submit').click( function() {
        genotyping_protocol_table.search("available_seedlots_table").draw();
    });

    jQuery('#markers_table_search_form').keypress( function( e ) {
        var code = e.keyCode || e.which;
        if( code == 13 ) {
            jQuery('#marker_table_search_submit').click();
        }
    });
});

</script>
