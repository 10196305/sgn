<%args>
  $results
  $form
</%args>

<& /page/page_title.mas, title => 'Organism Search' &>

<style>

#organism_search_form .checkboxgroup span span {
  white-space: nowrap;
  float: left;
  width: 10em;
}
#organism_search_form div label, #organism_search_form legend {
  font-weight: bold;
}
#organism_search_form div.text label {
  float: left;
  width: 10em;
}


</style>

% if( $results ) {
  <&| /page/info_section.mas, title => 'Search Results', subtitle => $results->count.' results' &>
  <% columnar_table_html(
         headings => ['Species', 'Common name'],
         data     => [ map [$_->species,$_->common_name], $results->all ],
     )
   %>
  </&>
% }

<&| /page/info_section.mas, title => 'Search' &>
  <% $form->render %>
</&>

<%init>
  use CXGN::Page::FormattingHelpers qw/ columnar_table_html /;
</%init>
