<%args>
  $refbase => ''
</%args>
% my $items = Load( $m->content );

<&| /page/info_section.mas, title => 'Data Sets' &>
<ul>

% foreach my $item (@$items) {
  <li>
%    if( my $r = $item->{ref} ) {
%       $r =~ s!^/!!;
        <a href="<% "$refbase/$r" %>"><% $item->{text} %></a>
%    } else {
        <% $item->{text} %>
%    }
  </li>
% }
</ul>
</&>

<%once>
  use YAML::Any;
</%once>
