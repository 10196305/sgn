<%args>
  $default_ref_base => ''
</%args>
% my $items = Load( $m->content );
% delete $ARGS{$_} for qw( default_ref_base c );

<&| /page/info_section.mas, title => 'Data Sets', %ARGS &>
<ul>

% foreach my $item (@$items) {
  <li>
%    if( my $r = $item->{ref} ) {
%       unless( $r =~ m!^/! || $r =~ m!^(ht|f)tp://! ) { $r = "$default_ref_base/$r" }
        <a href="<% $r %>"><% $item->{text} %></a>
%    } else {
        <% $item->{text} %>
%    }
  </li>
% }
</ul>
</&>

<%once>
  use YAML::Any;
</%once>
