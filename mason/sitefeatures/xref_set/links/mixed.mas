<%args>
  $xrefs
</%args>

<%init>
  # group the xrefs by sitefeature name
  my %by_sitefeature;
  for my $x ( @$xrefs ) {
      push @{$by_sitefeature{$x->feature->feature_name}}, $x;
  }
</%init>

% if( @$xrefs ) {
    <dl class="xref">
%     for my $f ( sort keys %by_sitefeature ) {
        <dt><% ucfirst $f |h %></dt>
        <dd>
          <ul>
%           for my $x ( @{$by_sitefeature{$f}} ) {
              <li><& /sitefeatures/xref/link/$f.mas, xref => $x &></li>
%           }
          </ul>
        </dd>
%     }
   </dl>
% }
