
<%args>
$organism_names_ref => undef
$organism_ids_ref   => undef
$lg_names_ref       => undef
</%args>

<& /util/import_javascript.mas, classes => [ 'jquery', 'jquery.dataTables' ] &>

<& /page/page_title.mas, title=>'Search Loci' &>



<%perl>

use CXGN::Page::FormattingHelpers qw / html_optional_show info_table_html conditional_like_input_html simple_selectbox_html/;


my $any_name_select = conditional_like_input_html("any_name","contains", "", '30');
    
#add an empty entry to the front of the list
unshift @$organism_names_ref, '';
    
my $organism = simple_selectbox_html( 
 choices  => $organism_names_ref,
 id     => "common_name",
);
    
my @lg_options = ();

#for (my $i = 0; $i < scalar(@$lg_names_ref); $i++) {
#		     push @lg_options, [$lg_names_ref->[$i], $lg_names_ref->[$i]];
#}
  
my $linkage_group_select = simple_selectbox_html( choices  => \@lg_options,
  id     => "locus_linkage_group",
  );
    
       
my $show_advanced_search = 0;
  #grep {defined($_)} @scalars{qw/ common_name phenotype editor has_sequence
  #				locus_linkage_group has_marker
  #					has_annotation has_reference
  #					ontology_term genbank_accession
  #					/};
no warnings 'uninitialized';
my $advanced_search=
  html_optional_show('advanced_search',
  'Advanced search options',
  qq|<div class="minorbox">\n|
    .info_table_html(
    'Organism'   => $organism,
    'Chromosome / Linkage&nbsp;Group' => $linkage_group_select,
    'Locus editor' =>qq|<input id="locus_editor" size="20"/>|,
    'Show only genes with' => <<EOH,
				  <input type="checkbox" id="has_sequence"  />sequence <br />
				  <input type="checkbox" id="has_marker" />markers<br />
				  <input type="checkbox" id="has_annotation" />GO/PO annotation<br />
EOH
	
      'Phenotype'  => qq|<input id="phenotype" size="30" /><a href="/search/phenotypes"> [Advanced SGN phenotype search]</a>|,
      'Ontology term' => qq|<input id="ontology_term" />
             <br /><span class="ghosted">(Term name or ID: e.g. 'carotenoid' or 'PO:0007010')</span>|,
      'Genbank ID' =>qq|<input id="genbank_accession" />
             <br /><span class="ghosted">(Accession or GI: e.g. 'EF091820' or '118185006')</span>|,   
      __border   =>0,
      __multicol =>2,
      __tableattrs => 'width="100%"',
      ) .qq|</div>|,
  $show_advanced_search);


</%perl>

<table id="loci_search_results" class="display">
<thead>
  <tr>
    <th>Organism</th>
    <th>Locus name</th>
    <th>Locus symbol</th>
    <th>Allele name</th>
    <th>Allele symbol</th>
    <th>Allele phenoytpe</th>
</tr>
</thead>

</table>

<br /><br />


<table>
  <tr>
    <td colspan="2"><b>Search for any locus or allele</b>  (<a href="../help/gene_search_help.pl">gene search help page</a>)</td></tr>
  <tr><td><% $any_name_select %></td>
    <td><a href="../phenome/locus_display.pl?action=new">[Submit new locus]</a></td>
</tr></table>
<br />
<% $advanced_search %>
<div align="center"><button id="submit_loci_search" />Search</button></div>






<link rel="stylesheet" type="text/css" href="/documents/inc/datatables/jquery.dataTables.css">



<script>

jQuery(document).ready(function () {

   var table = jQuery('#loci_search_results').DataTable( { 
   
     'searching' : false,
     'ordering'  : false,
     'processing': true,
     'serverSide': true,
     'ajax': { 'url':  '/ajax/search/loci',
               'data': function(d) { 
                  d.organism  = jQuery('#organism').val(); 
                  d.any_name  = jQuery('#any_name').val();
                  
             }
         }
     });


   jQuery('#submit_loci_search').click( function() { 
       table.search("").draw();
   });

});

  
</script>

