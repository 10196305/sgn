            <button class="btn btn-primary" type="button" class="btn btn-default" onclick="Workflow.complete(this);">Next Step</button>
        </div>
    </&>
    <&| /util/workflow.mas:step, title=>"Drag and Drop" &>
        <& /tools/label_designer/drag_and_drop.mas &>
