
<%args>
$uri
</%args>

<%perl>

use XML::Feed;

my $feed = XML::Feed->parse(URI->new($uri));

if (! $feed) { 
  print "The news feed is currently not available.<br />\n";
  return;
}

foreach my $e ($feed->entries) { 
  my $dt = $e->issued();
  print  "<a  href=\"".$e->link()."\">".$e->title."</a> [".$dt->year."/".$dt->month."/".$dt->day."]<br /><br />\n";
}
</%perl>


