
<%args>

</%args>

<& /page/page_title.mas, title=>"Reset Password" &>

<div>
To reset your password, please enter your email address. A link will be sent to that address with a link that will enable you to reset your password.
</div>

<form id="password_reset_form" name="password_reset_form">
<div style="white-space:nowrap">
  <label style="width:200px; white-space:nowrap;">Email Address</label>
  <input class="form-control" style="width:200px;" id="password_reset_email" name="password_reset_email" />
</div>
<br />
<button type="submit" class="btn btn-primary" id="submit_password_reset_email" >Get link</button>
</form>

<script>
    jQuery(document).ready( function() { 

      jQuery('#password_reset_form').submit( function(event) { 

        var form_data = jQuery('#password_reset_form').serialize();
        alert(JSON.stringify(form_data));
        jQuery.ajax( { 
          url: '/ajax/user/reset_password',
          data: form_data,
          error: function(r) { alert('An error occurred! Sorry!');  },
          success: function(r) {
            if (r.error) { alert(r.error); }
            else { 
              alert(r.message);
            }
          }
    
      });
      event.preventDefault();
    });
  });

</script>
