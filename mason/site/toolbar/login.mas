% # if the site is a mirror, gray out the login/logout links
% if( $c->config->{'is_mirror'} ) {
    <a style="line-height: 1.2; text-decoration: underline; background: none" href="<% $c->config->{main_production_site_url} %>" title="log in on main site">main site</a>
% } elsif ( $c->config->{disable_login} ) {
    <span style="visibility: hidden">site login disabled</span>
% } elsif ( $c->user_exists ) {
  
  <li class="navbar-form navbar-left" style="padding-left: 2px;">
    <button class="btn" type="button" onclick="location.href='/solpeople/top-level.pl';" style="color:#9d9d9d;background-color:#333;border-color:#666">
      My SGN
    </button>
    <button id="lists_link" class="btn" type="button" style="color:#9d9d9d;background-color:#333;border-color:#666">
      Lists
    </button>
    <div class="input-group">
      <button class="btn" type="button"  onclick="location.href='/solpeople/login.pl?logout=yes';" style="color:#ddd;background-color:#333;border-color:#666">
        <% $c->user->get_object->get_first_name || $c->user->get_object->get_last_name  || '' %>
        <span style="font-size:1.2em;" class="glyphicon glyphicon-log-out"></span>
      </button>
    </div>
  </li>
  
% } else {
<li class="dropdown" style="padding: 8px 15px 8px 0px;">
  <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" style="color:#9d9d9d;background-color:#333;border-color:#666">
    <span class="glyphicon glyphicon-log-in"></span> Login</a>
  </button>
  <ul class="dropdown-menu">
    <li><a href="/solpeople/login.pl">Log In</a></li>
    <li><a href="/solpeople/new-account.pl">New User</a></li>
  </ul>
</li>
% }




<div id="login_window" style="visibility: hidden" >
  <table>
    <tr><td>Username</td><td><input type="text" size="20" id="username_field" name="username_field" /></td></tr>
    <tr><td>Password</td><td><input type="password" size="20" id="password_field" name="password_field" /></td></tr>
  </table>  
</div>  
