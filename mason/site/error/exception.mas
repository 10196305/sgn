<%args>
 $exception
</%args>

<h2><% $exception->title || 'Error' %></h2>

<div>
  <% $exception->message %>
</div>

% if( $exception->can('developer_message') && !$c->get_conf('production_server') ) {
<div style="margin: 1em 0">
  <b>Developer message:</b>
    <% defined $exception->developer_message ? $exception->developer_message : 'none' %>
</div>
% }
