<%args>
  $title      => ''
  $caption    => ''
  $tableattrs => ''
  $multicol   => 1
  $border     => 0
  $sub        => 0
</%args>
<% info_table_html( %mapped_args, %$content ) %>
<%init>

  my %mapped_args =
      map {( "__$_" => $ARGS{$_} )}
      qw( title caption tableattrs multicol border sub );

  my $content = YAML::Any::Load( $m->content );

</%init>
<%once>
  use YAML::Any ();
  use CXGN::Page::FormattingHelpers 'info_table_html';
</%once>
