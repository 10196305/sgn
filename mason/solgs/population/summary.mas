<%doc>

=head1 NAME 

/population/sumary.mas - displays project metadata.

=AUTHOR

Isaak Y Tecle (iyt2@cornell.edu)

=cut

</%doc>

<%args>

$project_id
$project_name
$project_desc
$stocks_no
$markers_no
$traits_no
$uploaded_reference=>''
$owner=>''

</%args>

<%perl>

if (!$owner) {$owner = 'NextGen Cassava Project'; } 

my $project_link = qq |<a href="/solgs/population/$project_id">$project_name </a> | if !$uploaded_reference;
$project_link = qq |<a href="/solgs/population/$project_id/uploaded">$project_name</a> | if $uploaded_reference;

</%perl>

<table>
  <tr>
    <td>
      <& /page/columnar_table.mas,
         data         => [['Name', $project_link],
                          ['Description', $project_desc],
                          ['Owner', $owner],
                         ],
         __alt_freq   => 0,
         __align      => "l",
         __tableattrs => 'style="padding: 1px 225px 1px 1px"',   
        &>
    </td>    
    <td>
      <& /page/columnar_table.mas,        
         data       => [['No. of lines', $stocks_no],
                        ['No. of traits', $traits_no],
                        ['No. of markers', $markers_no],
                       ],
        __alt_freq  => 1,
        __align     => "l",
       __tableattrs => 'style="padding: 1px"',    
        &>
    </td>
  </tr>
</table>
    

 


