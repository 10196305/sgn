<%doc>

=head1 NAME
 
/solgs/population/kinship.mas - kinship heatmap

=AUTHOR

Isaak Y Tecle (iyt2@cornell.edu)

=cut

</%doc>

<%args>

$pop_id   => undef
$trial_id => undef

</%args>

<%perl>

$pop_id = $trial_id if $trial_id;

</%perl>

<style>
/* kinship plot styling */
.axis text {
  font: 10px sans-serif;
}

.axis line,
.axis path {
  fill: none;
  stroke: #000;
  shape-rendering: crispEdges;
}

</style>


<& /util/import_javascript.mas, classes => ["d3.d3Min", "solGS.kinship", "solGS.correlation"] &>
<&| /page/info_section.mas, 
      collapsible => 1, 
      collapsed   => 1, 
      title       => "Realized Genomic Kinship Matrix"
&>


<div id="kinship_canvas">
  <input id="run_kinship" class="button" type="button" value="Run kinship" /> 
 
  <div id="kinship_message"  style="font-weight:bold;text-align:center;color:#A7C942"></div>
  <input type="hidden" id="kinship_pop_id" value="<% $pop_id %>" /> 
</div>

</&>
