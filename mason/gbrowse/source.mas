<%args>
  $source
</%args>

<% info_table_html(
     __border => 0,
     $source->description => $m->scomp( '.release_html', source => $source ),
   )
%>

<%def .release_html>
<%args>
  $source
</%args>
  <p><% $source->extended_description %></p>
  <span style="font-weight: bold; font-size: 110%">
     <a href="<% $source->view_url %>">Browse</a>
     or <& /genomes/util/gbrowse_searchbox.mas, gb_root => $source->view_url &>
  </span>
</%def>
