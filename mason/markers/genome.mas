<%args>
$marker
</%args>
<%init>

# look up gbrowse cross-refs for this marker, if any
my @xrefs = map {

    $_->xrefs({
        -types   => ['match'],
        -name    => 'SGN-M'.$marker->marker_id,
        -aliases => 1,
    })

} $c->enabled_feature('gbrowse2');

</%init>

<&| /page/info_section.mas, title => "Genomic locations" &>
% if( @xrefs ) {
% my @locations =
  <& /page/columnar_table.mas,
            headings=>["Genome Annotation", "Position(s)"],
            data=> [ map [ $_->data_source->description,
                           '<a href="'.$_->url.'">'
                           .join( ', ', (
                               map $_->seq_id.':'.$_->start.'..'.$_->end, @{$_->seqfeatures}
                                  )
                             )
                           .'</a>',
                          ],
                     @xrefs
                   ],
            __alt_freq   =>2,
            __alt_width  => 1,
            __alt_offset => 3,
            __align=> 'l'
  &>
% }
</&>

