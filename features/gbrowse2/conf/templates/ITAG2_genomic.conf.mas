#include ITAG1_genomic.conf

[GENERAL]

examples = SL1.00sc00002_16.1.1 "Sulfite oxidase" TG154 C2_At3g02060

[main:database]
db_adaptor = Bio::DB::SeqFeature::Store
db_args     = -adaptor DBI::Pg
              -dsn 'dbi:Pg:host=<% $feature->default_db_host %>;dbname=sfs_itag2_genomic'
              -user '<% $feature->default_db_user %>'
              -password '<% $feature->default_db_password %>'
search options = default +autocomplete +fulltext 

[Markers:region]
feature         = match:ITAG_sgn_markers
ignore_sub_part = match_part
key             = Markers
fgcolor         = black
bgcolor         = yellow
glyph           = generic
label density   = 100
bump density    = 100

[mrna]
feature       = gene:ITAG_renaming
balloon hover = click for view options
balloon click = url:/api/v1/feature_xrefs?q=$name;exclude=gbrowse,gbrowse2

[cds]
link = sub { my $n = shift->display_name; $n =~ s/(\.\d+)\.\d+$/$1/; "<% $feature->cgi_url %>/gbrowse/ITAG2_protein/?name=$n" }
